<%= form_tag @article.comment_url do %>
<div class='article form-inline' id='commentform'>
	<h3><%= _("Comment")%> <em><%=@article.title%></em></h3>
	<div class='control-group'>
		<%= text_field "comment", "author", :class => 'span12', :style => 'margin: 10px 10px 0 10px; width: 96%; align: center;', :placeholder => _("Your name") %>  	
	</div>
	<div class='control-group'>
		<%= text_field "comment", "email", :class => 'span12', :style => 'margin: 5px 10px 0 10px; width: 96%; align: center;', :placeholder => _("Email address") %>
	</div>
	<div class='control-group'>
		<%= text_field "comment", "url", :class => 'span12', :style => 'margin: 5px 10px 0 10px; width: 96%; align: center;', :placeholder => _("Your website") %>
	</div>
	<div class='control-group'>
		<%= text_area 'comment', 'body', :rows => 8, :class => 'span12', :style => 'margin: 5px 10px 0 10px; width: 96%; align: center;', :placeholder => _("Your comment") %>
	</div>

	<% if this_blog.use_recaptcha %>
	    <div class='control-group'><%= raw recaptcha_tags :ajax => true %></div>
	<% end %>

	<input type='submit' id='form-submit-button' class='btn btn-info' style = 'margin: 5px 10px 0 10px; ; width: 97%;' value="<%= _('comment') %>" />
	<br />
	<br />
</div>
<% end %>
